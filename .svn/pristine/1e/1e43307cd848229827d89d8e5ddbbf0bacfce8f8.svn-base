#ui-datepicker-div .ui-datepicker-title select{
	height: auto;
	line-height: 1;
	padding: 5px 10px;
	background: url(../../img/select-arrow.png) 95% 50% no-repeat;
	background-size: 10px 10px;
}
#ui-datepicker-div .ui-datepicker-title select:hover{
	box-shadow: 0px 0px 2px rgba(0,0,0,.5);
}

.ui-datepicker{
	width:auto;
}

#ui-datepicker-div td a{
	border: 0;
	background: transparent;
	text-align: center;
	border-radius: 50%;
	width: 3em;
	height: 3em;
	line-height: 3em;
	font-weight: bold;
}
#ui-datepicker-div td a:hover{
	background: rgba(0,0,0,.1);
	box-shadow: 1px 1px 2px rgba(0,0,0,.1);
}


#ui-datepicker-div .ui-datepicker-week-end:nth-child(1) a{
	color: red;
} 
#ui-datepicker-div .ui-datepicker-week-end:nth-child(1) a:hover{
	background: rgba(255,0,0,.1);
	
}
#ui-datepicker-div .ui-datepicker-week-end:nth-child(7) a{
	color: blue;
}
#ui-datepicker-div .ui-datepicker-week-end:nth-child(7) a:hover{
	background: rgba(0,255,255,.1);
	
}

#ui-datepicker-div .ui-datepicker-week-end:nth-child(1) a.ui-state-active{
	background: rgba(255,0,0,.1);
	color: red;
}
#ui-datepicker-div .ui-datepicker-week-end:nth-child(7) a.ui-state-active{
	background: rgba(0,255,255,.1);
	color: blue;
}
#ui-datepicker-div td a.ui-state-active{
	background: rgba(0,0,0,.1);
	color: #000;
}
#ui-datepicker-div td a.ui-state-highlight{
	background: #f1dca5;
	color: #3d3d3d;
}
.ui-widget-header{
	border: 1px solid #ddd;
    background: #f1dca5;
    color: #333;
    font-weight: bold;
    box-shadow: 1px 1px 2px rgba(0,0,0,.2);
}
#ui-datepicker-div thead th:nth-child(1) span{
	color: red;
}
#ui-datepicker-div thead th:nth-child(7) span{
	color: blue;
}

input.hasDatepicker:read-only {
    background-color: #fff;
    font-weight: normal;
}
.ui-datepicker .ui-datepicker-month{
	margin-left: 2em;
	color: #8c6239;
}

